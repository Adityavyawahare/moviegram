<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Staatliches&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Lobster+Two&family=Roboto:wght@300&family=Special+Elite&family=Yusei+Magic&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed&display=swap" rel="stylesheet">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script>

    </script>
  </head>
  <body class="movies">
  <div class="flex-container">
    <h1 class="title"><%= title %></h1>
    <div class="search-container">
      <form action="/search" method="post">
        <input type="text" placeholder="Search.." name="search">
        <button type="submit"><i class="fa fa-search"></i></button>
      </form>
    </div>
    <div class="form">
      <form action="/movies" method="post">
    <p style="text-align: center; font-weight: bolder; margin: 15px;">FILTER BY</p>
        <p class="topic">BY GENRE</p>
        <label for="horror" class="data">
          <input id="horror" type="radio" name="genre" value="1" >
          horror
        </label>
        <br>
        <label for="thriller"class="data">
          <input id="thriller" type="radio" name="genre" value="2" >
          thriller
        </label>
        <br>
        <label for="comedy" class="data">
          <input id="comedy" type="radio" name="genre" value="3" >
          comedy
        </label>
        <br>
    <p class="topic" >BY IMDB</p>
    <label for="imdb8+" class="data">
      <input id="imdb8+" type="radio" name="imdb" value=">8" >
      imdb 10-8
    </label>
    <br>
    <label for="imdb6+" class="data">
      <input id="imdb6+" type="radio" name="imdb" value="BETWEEN 6 AND 8" >
      imdb 8-6
    </label>
    <br>
    <label for="imdb6-" class="data">
      <input id="imdb6-" type="radio" name="imdb" value="<6" >
      imdb below 6
    </label>
    <br>
    <p class="topic">BY POPULARITY</p>
    <label for="byincr" class="data">
      <input id="byincr" type="radio" name="sort" value="ASC" >
      by incr
    </label>
    <br>
    <label for="bydecr" class="data">
      <input id="bydecr" type="radio" name="sort" value="DESC" >
      by decr
    </label>
        <br>
        <div>
        <button type="submit" class="button">
          APPLY
        </button>
        </div>
      </form>
    </div>
    <div class="main flex-container">
      <%for(var i=0;i<movies.length;i++){%>
      <div class="gallery">
        <a href="/movies/<%=movies[i].name%>">
          <img src="<%=movies[i].image_url%>" alt="<%=movies[i].name%>" onclick="" >
        <p><%=movies[i].name%><br>
          IMDB: <%=movies[i].imdb%>
        </p>
        </a>
      </div>
      <%}%>
    </div>
  </div>
  </body>
</html>
